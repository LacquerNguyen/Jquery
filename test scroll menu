	function newsScroll() {
		if($('#tmp_wrap_news').length) {
			var headerH = $('#tmp_header').outerHeight(),
			wH = $(window).height(),
			hH = $('#tmp_wrap_news').outerHeight(),
			mvH = $('#tmp_main_visual').outerHeight(),
			bottomPos = $(window).scrollTop() + $(window).height();
			if(wH > (headerH + mvH + hH)) {
				if(bottomPos > (headerH + mvH + hH)) {
					$('#tmp_wrap_news').addClass('small');
					if(bottomPos > (headerH + mvH + hH)) {
						if($(window).width() < $('#tmp_wrapper').width()) {
							if($('body').hasClass('model_sp')) {
								var wRatio = ($('#tmp_wrapper').width() / $(window).width());
								$('#tmp_wrap_news').css('bottom',wH*wRatio - (headerH + mvH + hH));
							} else {
								$('#tmp_wrap_news').css('bottom',0);
								$('#tmp_footer').css('margin-bottom',hH);
							}
						} else {
							$('#tmp_wrap_news').css('bottom',0);
							$('#tmp_footer').css('margin-bottom',hH);
						}
						$(window).scroll(function() {
							if ($(document).scrollTop() >= 54) {
								$('#tmp_wrap_news').css('bottom',0);
								$('.float_menu').css('top','40%');
							} else {
								$('#tmp_wrap_news').css('bottom',0);
							}
						})
					}
				}
			} else {
				$('#tmp_wrap_news').removeClass('small');
				$(window).scroll(function() {
					var	wS = $(this).scrollTop(),
						mH = $('.float_menu').outerHeight(),
						mT = $('.float_menu').offset().top,
						bottomPos = $(window).scrollTop() + $(window).height();
					if($(window).width() < $('#tmp_wrapper').width()) {
						var wRatio = ($('#tmp_wrapper').width() / $(window).width());
						if (bottomPos*wRatio > (headerH + mvH + hH)){
							$('#tmp_wrap_news').addClass('fixed');
							$('#tmp_footer').css('margin-bottom',hH);
							$('.float_menu').css('top','40%');
						} else {
							$('#tmp_wrap_news').removeClass('fixed');
							$('#tmp_footer').css('margin-bottom',0);
							$('.float_menu').css('top','50%');
						}
					} else {
						if (bottomPos > (headerH + mvH + hH)){
							$('#tmp_wrap_news').addClass('fixed');
							$('#tmp_footer').css('margin-bottom',hH);
							$('.float_menu').css('top','40%');
						} else {
							$('#tmp_wrap_news').removeClass('fixed');
							$('#tmp_footer').css('margin-bottom',0);
							$('.float_menu').css('top','50%');
						}
					}
				})
			}
		}
	}
  
  
  
  
  	$(window).on('resize', function(){
		if (tx !== false) {
			clearTimeout(tx);
		} 
		tx = setTimeout(function() {
		if ($(window).width() > 640) {
			if($('#tmp_wrap_news').length) {
				var headerH = $('#tmp_header').outerHeight(),
				hH = $('#tmp_wrap_news').outerHeight();
				$(window).scroll(function() {
					var	wH = $(window).height(),
						wS = $(this).scrollTop(),
						mH = $('.float_menu').outerHeight(),
						mT = $('.float_menu').offset().top;
					if (wS > headerH){
						$('#tmp_wrap_news').addClass('fixed');
						$('#tmp_footer').css('margin-bottom',hH);
						$('.float_menu').css('top','40%');
					} else {
						$('#tmp_wrap_news').removeClass('fixed');
						$('#tmp_footer').css('margin-bottom',0);
						$('.float_menu').css('top','50%');
					}
				});
				$('#tmp_wrap_news').css('bottom',0);
				newsScroll();
			}
		} else {
			$('#tmp_wrap_news').removeClass('fixed');
			$('#tmp_footer').css('margin-bottom',0);
			
		}
	}, 150);});
---------------------------------------------------------------------------------------------------------------------------
function menuScroll() {
            $(window).scroll(function() {
                var windowHeight = $(window)[0].innerHeight;
                var windowScroll = $(window).scrollTop();
                var offsetTop = $('.navbar_offset').offset().top;
                var navOuterHeight = $('.navbar').outerHeight();
                if (offsetTop - (windowHeight + windowScroll - navOuterHeight) < 0 && $(window).width() >= 991) {
                    $('.navbar').addClass('fixed');
                    $('footer').css('margin-bottom',navOuterHeight);
                    $('#submenu').removeClass('navbar_menu');
                    $('.closeNav').css('display','none');
                }
                else {
                    $('.navbar').removeClass('fixed');
                    $('footer').css('margin-bottom',0);
                    $('#submenu').addClass('navbar_menu');
                    $('.closeNav').css('display','block');
                }
            });
        }
    menuScroll();
    function menuRight() {
        if ($(window).width() < 991) {
            $('.navbar').removeClass('fixed');
            $('.navbar-nav').addClass('menu_rgt');
            $('.box_menu').css('display','block');
        }
        else{
            $('.box_menu').css('display','none');
            $('.navbar-nav').removeClass('menu_rgt');
        }
    }
     menuRight();
     var mq = window.matchMedia( "(min-width: 991px)" );
     function appendElement(e) {
         if (e.matches) {
            menuScroll();
            $('#submenu').removeClass('navbar_menu');
            $('.box_menu').css('display','none');
            $('.navbar-nav').removeClass('menu_rgt');
            $('.closeNav').css('display','none');
         } else {
            $('.navbar').removeClass('fixed');
            menuRight();
         }
     }
     $(document).ready(function(){
         appendElement(mq);
         mq.addListener(appendElement);
     });
